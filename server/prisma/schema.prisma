generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Product {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  description String
  price      Float
  promoPrice Float?
  images     Json
  createdAt  DateTime @default(now())
}
